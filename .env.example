# Copy this file to ".env" and replace placeholder values with real secrets.

# MongoDB connection URI (replace placeholders)
MONGODB_URL="mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority&appName=Cluster0"

# Server port
PORT=5000

# JWT settings
JWT_SECRET="replace_with_a_strong_random_secret"
JWT_EXPIRES="1d"

# Cookie expiration in days
COOKIE_EXPIRES=1